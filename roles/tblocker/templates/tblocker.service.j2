[Unit]
Description=XRay Torrent Blocker Service
Documentation=https://github.com/kutovoys/xray-torrent-blocker
After=network.target

[Service]
Type=simple
User=root
ExecStart={{ tblocker_binary_path | default('/opt/tblocker/tblocker') }} -c {{ tblocker_config_file }}
Restart=on-failure

[Install]
WantedBy=multi-user.target 